@model IEnumerable<PruebaTecnica_Entidades.VehiculoDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div>

    <a asp-controller="Home" asp-action="CreateVehicule" class="btn btn-primary"> Registrar nuevo Vehiculo</a>
    <hr />

    <h3> Lista de Vehiculos Nuevos</h3>
    <p> nota: Esta Lista muestra los vehiculos a los cuales no se les ha asignado un servicio</p>
    <hr />
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Placa</th>
                <th scope="col">Dueño</th>
                <th scope="col">Marca</th>
                <th scope="col">Asignar Servicios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.lista)
            {
                <tr>
                    
                    <td>@item.Placa</td>
                    <td>@item.Dueno</td>
                    <td>@item.Marca</td>
                    <td><a  class="btn btn-primary"  asp-route-id="@item.ID_Vehiculo" asp-route-placa="@item.Placa" asp-route-dueno="@item.Dueno" asp-route-marca="@item.Marca" asp-action="VistaServicios" asp-controller="Home"> Asignar Servicios</a> </td>
                </tr>
            }

        </tbody>
    </table>


</div>
